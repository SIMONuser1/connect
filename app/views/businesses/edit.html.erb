<section class="bg-white space-sm pb-4">
  <div class="container">
    <div class="row justify-content-between align-items-center">
      <div class="col-auto">
        <h1 class="h2">Edit Business</h1>
      </div>
    </div>
  </div>
</section>
<section class="flush-with-above space-0">
  <div class="bg-white">
    <div class="container">
      <div class="row">
        <div class="col">

          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">My Business</a>
            </li>
          </ul>

        </div>
      </div>
    </div>
  </div>
</section>
<% unless @business.users.where(id: current_user.id).empty? %>
  <%= render 'edit_form', business: @business %>


<% else %>
  <section class="height-70">
    <div class="container">
      <div class="row justify-content-center">
          <div class="col-12 col-md-6 col-lg-5">
              <div class="card card-lg text-center">
                  <div class="card-body">
                      <i class="icon-add-to-list display-4 opacity-20"></i>
                      <h1 class="h5">Oops! This is not your Business!</h1>
                      <p>
                          If you would like to edit your business, click the button below!

                      </p>
                      <%= link_to edit_business_path(current_user.business) do%>
                        <div class="btn btn-lg btn-primary">
                          Edit my Profile
                        </div>
                      <% end %>
                  </div>
              </div>
          </div>
          <!--end of col-->
      </div>
      <!--end of row-->
    </div>
  </section>
<% end %>
