<div class="container">
  <div class="row justify-content-between">
    <div class="col">
      <div class="media align-items-center">
          <%= cl_image_tag(@business.photo, {class: "rounded avatar avatar-lg"}) %>

          <div class="media-body">
              <h1 class="mb-0"><%= @business.name %></h1>
              <h2 class="lead mb-2"><%= @business.description.to_s[0...80] %>...</h2>
              <div class="d-flex align-items-center">
                 <div class="text-small">
                     <ul class="list-inline">
                         <li class="list-inline-item"><i class="fas fa-hand-holding-heart"></i> <%= current_user.business.match_rating_with(@business) %>
                        </li>
                         <li class="list-inline-item"><i class="fas fa-eye"></i> <%= current_user.business.who_clicked_who(@business) %></li>
                     </ul>
                 </div>
              </div>
          </div>
      </div>
    </div>
    <!--end of col-->
    <div class="col-auto">
      <div class="btn-group mb-2">
        <%= link_to @business.users.first.linkedin_url, target: "_blank" do %>
        <button type="button" class="btn btn-success btn-lg">Reach Out</button>
        <% end %>
